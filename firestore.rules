rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: own doc, or owner can read/update staff of their shop
    match /billing_users/{userId} {
      allow read: if request.auth != null
        && (request.auth.uid == userId
            || (get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.role == 'OWNER'
                && resource.data.role == 'STAFF'
                && resource.data.shopId == get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.shopId));
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth != null
        && (request.auth.uid == userId
            || (get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.role == 'OWNER'
                && resource.data.role == 'STAFF'
                && resource.data.shopId == get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.shopId));
    }

    // Shops: any authenticated user (owner manages their shop)
    match /billing_shops/{shopId} {
      allow read, write: if request.auth != null;
    }

    // Staff subcollection: only the shop owner can read/write
    match /billing_shops/{shopId}/staff/{staffId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/billing_shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    // Shop inventory: only the shop owner can read/write
    match /billing_shops/{shopId}/inventory/{barcode} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/billing_shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    // Suppliers: only the shop owner can read/write
    match /billing_shops/{shopId}/suppliers/{supplierId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/billing_shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    // Purchases: only the shop owner can read/write
    match /billing_shops/{shopId}/purchases/{purchaseId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/billing_shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    // Shop bills: only the shop owner (or staff if you add later) can read/write
    match /billing_shops/{shopId}/bills/{billId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/billing_shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    // Shop settings: only the shop owner can read/write
    match /billing_shops/{shopId}/settings/{docId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/billing_shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    // Global products: authenticated can read; authenticated can create/update (e.g. owner creates)
    match /billing_products/{barcode} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
    }

    match /G10/{docId} {
      allow read, write: if true;
    }

    match /{document=**} {
      allow read: if true;
    }
  }
}
