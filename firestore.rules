rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: own doc, or owner can read/update staff of their shop
    match /billing_users/{userId} {
      allow read: if request.auth != null
        && (request.auth.uid == userId
            || (get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.role == 'OWNER'
                && resource.data.role == 'STAFF'
                && resource.data.shopId == get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.shopId));
      allow create: if request.auth.uid == userId;
      allow update, delete: if request.auth != null
        && (request.auth.uid == userId
            || (get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.role == 'OWNER'
                && resource.data.role == 'STAFF'
                && resource.data.shopId == get(/databases/$(database)/documents/billing_users/$(request.auth.uid)).data.shopId));
    }

    // Shops: any authenticated user (owner manages their shop)
    match /billing_shops/{shopId} {
      allow read, write: if request.auth != null;
    }

    // Staff subcollection: only the shop owner can read/write
    match /billing_shops/{shopId}/staff/{staffId} {
      allow read, write: if request.auth != null
        && get(/databases/$(database)/documents/billing_shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    match /G10/{docId} {
      allow read, write: if true;
    }

    match /{document=**} {
      allow read: if true;
    }
  }
}
